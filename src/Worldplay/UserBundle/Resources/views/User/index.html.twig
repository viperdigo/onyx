{% extends '::content.html.twig' %}
{% import '::macro.html.twig' as table %}

{% block contentTitle %}Usuários{% endblock %}

{% block contentBody %}

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-search"></i>Pesquisar
                    </div>
                    <div class="tools">
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <a href="{{ path('user_new') }}" class="btn blue-hoki">Novo <i
                                                class="fa fa-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="customDataTable">
                        <thead>
                        <tr>
                            <th>Usuário</th>
                            <th>Nome</th>
                            <th>Criado em:</th>
                            <th>Tipo</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr class="odd gradeX">
                                <td>{{ entity.username }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.createdAt | date('d/m/Y') }}</td>
                                <td>{{ entity.userType.name }}</td>
                                <td>{% if(entity.isActive) %}
                                        Ativo
                                    {% else %}
                                        Inativo
                                    {% endif %}
                                </td>
                                <td width="26%">
                                    <a class="btn btn-xs blue-hoki" href="{{ path('user_edit',{'id':entity.id}) }}"><i
                                                class="fa fa-edit"></i> Editar</a>

                                    <a class="btn btn-xs red btn-delete"
                                       data-toggle="modal"
                                       data-id="{{ entity.id }}"
                                       data-name="{{ entity.username }}"
                                       data-href="{{ path('user_delete', {'id':entity.id}) }}">
                                        <i class="fa fa-close"></i>Excluir
                                    </a>
                                    <a class="btn btn-xs default"
                                       href="{{ path('user_show',{'slug':entity.slug}) }}"><i
                                                class="fa fa-search"></i> Detalhes</a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    {# Modal Delete #}
    {% include 'UserBundle:User:delete.html.twig' %}

    {# Modal Show #}

{% endblock %}