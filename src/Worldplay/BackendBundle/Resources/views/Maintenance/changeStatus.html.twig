{% set titleModal = "Change Status Maintenance"|trans %}
{% set bodyMsg = "Tem certeza que deseja alterar o status da Manutenção:
                    <strong data-id=''></strong> Produto:
                    <strong data-name=''></strong> ?
                    <p>De: <strong data-currentstatus=''></strong></p>
                    <p>Para: <strong data-nextstatus=''></strong></p>" %}
{% set btnAction = "Update"|trans %}

<div id="modal-change-status" class="modal fade static" role="dialog" aria-labelledby="orderModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">{{ titleModal }}</h4>
            </div>
            <div class="modal-body">
                <p>
                    {{ bodyMsg|raw }}
                </p>
            </div>
            <div class="modal-footer">
                <form method="get">
                    <button type="submit" class="btn blue">{{ btnAction }}</button>
                    <button type="button" data-dismiss="modal" class="btn default">{{ "Cancel"|trans }}</button>
                </form>
            </div>
        </div>
    </div>
</div>