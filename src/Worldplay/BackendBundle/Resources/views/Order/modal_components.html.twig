<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">{{ "Components with"|trans }} {{ product.description }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th style="text-align: center;">{{ "Id"|trans }}</th>
                    <th style="text-align: center;">{{ "Product"|trans }}</th>
                    <th style="text-align: center;">{{ "Quantity"|trans }}</th>
                </tr>
                </thead>
                <tbody>

                {% if components is empty %}
                    <tr>
                        <td colspan="3" align="center">{{ "No data found"|trans }}</td>
                    </tr>
                {% endif %}

                {% for component in components %}

                    <tr>
                        <td align="center">{{ component.component.id }}</td>
                        <td align="center">{{ component.component.description }}</td>
                        <td align="center">{{ component.quantity }}</td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn default">{{ "Close"|trans }}</button>
</div>